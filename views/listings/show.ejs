<% layout("layouts/boilerplate") %>

    <div class="container mt-4">

        <!-- Title -->
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <h1 class="fw-bold mb-3">
                    <%= listing.title %>
                </h1>
            </div>
        </div>

        <!-- Listing Card -->
        <div class="row mb-4">
            <div class="col-lg-8 offset-lg-2">
                <div class="card border-0 rounded-4">
                    <img src="<%= listing.image.url %>" alt="listing image" class="card-img-top rounded-top-4 show-img"
                        style="max-height: 400px; height: 28rem; object-fit: cover;">

                    <div class="card-body">
                        <p class="text-muted mb-1"><i>Owned By : <i class="bi bi-person-circle me-1 text-muted"></i><%= listing.owner.username %></i></p>
                        <p class="mb-2">
                            <%= listing.description %>
                        </p>

                        <h5 class="fw-semibold text-danger">&#8377;<%= listing.price ?
                                listing.price.toLocaleString('en-IN') : 'N/A' %>/night</h5>
                        <p class="mb-0"><i class="bi bi-geo-alt-fill text-primary"></i>
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                    </div>

                    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                        <div class="d-flex justify-content-between mt-3">
                            <form action="/listings/<%= listing._id %>/edit" method="get" class="m-0">
                                <button class="btn btn-sm btn-outline-primary px-3">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                            </form>

                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="m-0">
                                <button class="btn btn-sm btn-outline-danger px-3">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>


                        <% } %>
                </div>
            </div>
        </div>

        <hr>

        <!-- Review Form -->
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <% if(currUser){ %>
                    <div class="card mb-4  border-0 rounded-4">
                        <div class="card-body">
                            <h4 class="mb-3">Leave a Review</h4>
                            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate
                                class="needs-validation">

                                <!-- Rating -->
                                <div class="mb-3">
                                    <label class="form-label" for="rating">Rating:</label>
                                    <fieldset class="starability-slot">
                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>

                                <!-- Comment -->
                                <div class="mb-3">
                                    <label class="form-label" for="comment">Comments:</label>
                                    <textarea cols="30" rows="4" name="review[comment]" id="comment"
                                        class="form-control rounded-3" required></textarea>
                                    <div class="invalid-feedback">Please submit some comments</div>
                                </div>

                                <button class="btn btn-dark px-4">Submit</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

        <hr>

        <!-- Reviews -->
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="mb-3">All Reviews</h4>
                <div class="row">
                    <% for(review of listing.reviews) { %>
                        <div class="col-md-6 mb-3">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">

                                    <!-- Author + Rating -->
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="card-title  text-secondary fw-semibold">
                                            <i class="bi bi-person-circle me-1 text-muted"></i>
                                            <%= review.author.username %>
                                        </h6>

                                        <p class="starability-result small" data-rating="<%= review.rating %>"></p>
                                    </div>

                                    <!-- Comment -->
                                    <p class="card-text text-muted fst-italic flex-grow-1">
                                        "<%= review.comment %>"
                                    </p>

                                    <!-- Delete button (only author can see) -->
                                    <% if(currUser && review.author._id.equals(currUser._id)) { %>
                                        <div class="text-end">
                                            <form
                                                action="/listings/<%= listing._id%>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST" class="d-inline">
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                        <% } %>

                                </div>
                            </div>
                        </div>

                        <% } %>
                </div>
            </div>
        </div>

    </div>